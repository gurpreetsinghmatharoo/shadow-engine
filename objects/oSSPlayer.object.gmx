          <argument>
            <kind>1</kind>
            <string>///////Mouse light source position
oShadowManager.lightX[0] = mouse_x;
oShadowManager.lightY[0] = mouse_y;

//Shadow direction
oShadowManager.shadowDir = point_direction(mouse_x, mouse_y, x, y);

//Shadow length
if (oShadowManager.lightMode) oShadowManager.shadowLen = point_distance(mouse_x, mouse_y, x, y)/48;

//Shadow blur distance
oShadowManager.blurDist += (mouse_wheel_up() - mouse_wheel_down())/10;

//Movement
var hor, ver;
hor = (keyboard_check(ord("D")) || keyboard_check(vk_right))-(keyboard_check(ord("A")) || keyboard_check(vk_left));
ver = (keyboard_check(ord("S")) || keyboard_check(vk_down))-(keyboard_check(ord("W")) || keyboard_check(vk_up));

hsp = lerp(hsp, hor*moveSpeed, 0.1);
vsp = lerp(vsp, ver*moveSpeed, 0.1);

//Collisions
if (place_meeting(x+hsp, y, oSSCube)){
    while(!place_meeting(x+sign(hsp), y, oSSCube)){
x += sign(hsp);
    }

    hsp = 0;
}

if (place_meeting(x, y+vsp, oSSCube)){
    while(!place_meeting(x, y+sign(vsp), oSSCube)){
y += sign(vsp);
    }

    vsp = 0;
}

x = round(x + hsp);
y = round(y + vsp);

z += zsp;

//Jumping
if (keyboard_check_pressed(vk_space) &amp;&amp; !zsp){
    zsp = -5;
}

//Gravity
if (zsp &lt; 4){
    zsp+=0.5;
}

//Ground
if (z + zsp &gt; 0){
    z = 0;
    zsp = 0;
}

//Rotation
//image_angle = point_direction(x, y, mouse_x, mouse_y)-90;
</string>
